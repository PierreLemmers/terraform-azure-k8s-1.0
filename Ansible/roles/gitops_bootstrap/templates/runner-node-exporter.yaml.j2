apiVersion: v1
kind: Service
metadata:
  name: node-exporter-runner
  namespace: {{ monitoring_namespace }}
  labels:
    app: node-exporter-runner
spec:
  ports:
    - name: metrics
      port: 9100
      targetPort: 9100
---
apiVersion: v1
kind: Endpoints
metadata:
  name: node-exporter-runner
  namespace: {{ monitoring_namespace }}
subsets:
  - addresses:
{% for ip in runner_node_ips %}
      - ip: {{ ip }}
{% endfor %}
    ports:
      - name: metrics
        port: 9100
